<% provide(:title, "Home") %>
<ul>
	<% if user_signed_in? %>
		<%= render 'layouts/ad_form' %>
	<% end %>
	<% @ads.each do |ad| %>
		<li><%= ad.content %>
      <% if can? :delete, ad %>
        <%= link_to "delete", ad, method: :delete,
                                  data: { confirm: "You sure?" },
                                  title: ad.content %>
      <% end %><br>
      <%= User.find_by_id(ad.user_id).email %>
			<% current_user = User.new %>
  	</li>
	<% end %>
	<%= will_paginate @ads %>
</ul>
